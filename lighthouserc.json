{
  "ci": {
    "collect": {
      "numberOfRuns": 2,
      "staticDistDir": "./dist",
      "url": [
        "http://127.0.0.1:4173/"
      ],
      "settings": {
        "chromeFlags": "--no-sandbox --headless=new"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.6
          }
        ],
        "largest-contentful-paint": [
          "error",
          {
            "maxNumericValue": 5200
          }
        ],
        "total-blocking-time": [
          "error",
          {
            "maxNumericValue": 700
          }
        ],
        "cumulative-layout-shift": [
          "error",
          {
            "maxNumericValue": 0.12
          }
        ],
        "resource-summary:script:size": [
          "error",
          {
            "maxNumericValue": 70000
          }
        ],
        "resource-summary:stylesheet:size": [
          "error",
          {
            "maxNumericValue": 35000
          }
        ],
        "resource-summary:total:size": [
          "error",
          {
            "maxNumericValue": 1800000
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
